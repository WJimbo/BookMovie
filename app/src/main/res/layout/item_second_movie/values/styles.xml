<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_linear">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_linear_img">
        <item name="android:layout_width">@dimen/main_bottom_size</item>
        <item name="android:layout_height">@dimen/main_bottom_size</item>
    </style>

    <style name="main_linear_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/tv_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>
</resources>